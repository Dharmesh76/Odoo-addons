<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hotel_product_view_tree2" model="ir.ui.view">
        <field name="name">hotel.product.view.tree</field>
        <field name="model">trial.field</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hotel_product_view_form2" model="ir.ui.view">
        <field name="name">hotel.product.view.form</field>
        <field name="model">trial.field</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
<!--                            <field name="currency_id"/>-->
                            <field name="name"/>
                            <field name="category"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hotel_product2" model="ir.actions.act_window">
        <field name="name">Products1</field>
        <field name="res_model">trial.field</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face">
                Create Your First Product
            </p>
        </field>
    </record>
</odoo>